<UserControl x:Class="SERGamesLauncher_V31.CustomButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SERGamesLauncher_V31"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Configuration du bouton personnalisé" 
                       Foreground="White" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Créez un bouton custom pour vos projets en cours" 
                       Foreground="#888" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Toggle Activer/Désactiver -->
        <Border Grid.Row="1" Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Activer le bouton personnalisé" 
                           Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <ToggleButton x:Name="toggleEnabled" 
                              Style="{StaticResource ToggleSwitchStyle}"
                              Checked="ToggleEnabled_Changed"
                              Unchecked="ToggleEnabled_Changed"/>
                <TextBlock x:Name="txtStatus" Text="Désactivé" 
                           Foreground="#888" FontSize="14" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulaire de configuration -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="configPanel">
                
                <!-- Section Image -->
                <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Image du bouton" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Text="L'image sera redimensionnée automatiquement (50x50 pour le bouton, 200x200 pour la page)" 
                                       Foreground="#888" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <Button x:Name="btnSelectImage" Content="Sélectionner une image..." 
                                    Style="{StaticResource LaunchButtonStyle}" 
                                    Width="200" Height="35" HorizontalAlignment="Left"
                                    Click="BtnSelectImage_Click"/>
                            <TextBlock x:Name="txtImagePath" Text="Aucune image sélectionnée" 
                                       Foreground="#666" FontSize="12" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Aperçu de l'image -->
                        <Border Grid.Column="1" Width="80" Height="80" Background="#1E1E1E" CornerRadius="8" Margin="20,0,0,0">
                            <Image x:Name="imgPreview" Width="50" Height="50" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Section Textes du bouton -->
                <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Textes" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <!-- Nom du bouton -->
                        <TextBlock Text="Nom du bouton (menu gauche)" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtButtonLabel" Style="{StaticResource AdminTextBoxStyle}" 
                                 Text="Mon Projet" Margin="0,0,0,15"/>

                        <!-- Titre de la page -->
                        <TextBlock Text="Titre de la page" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPageTitle" Style="{StaticResource AdminTextBoxStyle}" 
                                 Text="Mon Projet" Margin="0,0,0,15"/>

                        <!-- Sous-titre -->
                        <TextBlock Text="Sous-titre (message en orange)" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPageSubtitle" Style="{StaticResource AdminTextBoxStyle}" 
                                 Text="Projet en cours" Margin="0,0,0,15"/>

                        <!-- Instructions -->
                        <TextBlock Text="Instructions / Description" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPageInstructions" Style="{StaticResource AdminTextBoxStyle}" 
                                 Text="Description du projet" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Section Cible -->
                <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Action du bouton Lancer" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <!-- Type de cible -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <RadioButton x:Name="rbUrl" Content="URL (site web)" Foreground="White" 
                                         GroupName="TargetType" IsChecked="True" Margin="0,0,30,0"
                                         Checked="TargetType_Changed"/>
                            <RadioButton x:Name="rbExe" Content="Exécutable (application)" Foreground="White" 
                                         GroupName="TargetType"
                                         Checked="TargetType_Changed"/>
                        </StackPanel>

                        <!-- Chemin/URL -->
                        <TextBlock x:Name="txtTargetLabel" Text="URL à ouvrir" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtTargetPath" Grid.Column="0" Style="{StaticResource AdminTextBoxStyle}"/>
                            <Button x:Name="btnBrowse" Grid.Column="1" Content="..." 
                                    Width="40" Height="30" Margin="10,0,0,0"
                                    Style="{StaticResource LaunchButtonStyle}"
                                    Visibility="Collapsed"
                                    Click="BtnBrowse_Click"/>
                        </Grid>
                        
                        <!-- Info placeholders -->
                        <TextBlock Text="Placeholders disponibles : {}{FULLNAME}, {}{AGE}, {}{PC}, {}{TIMESTAMP}, {}{TOKEN}" 
                                   Foreground="#666" FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>

                        <!-- Arguments (pour exe) -->
                        <StackPanel x:Name="argumentsPanel" Visibility="Collapsed" Margin="0,15,0,0">
                            <TextBlock Text="Arguments de lancement (optionnel)" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtLaunchArguments" Style="{StaticResource AdminTextBoxStyle}"/>
                            <TextBlock Text="Placeholders disponibles : {}{FULLNAME}, {}{AGE}, {}{PC}, {}{TIMESTAMP}, {}{TOKEN}" 
                                       Foreground="#666" FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Section Token -->
                <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Génération de token" Foreground="White" FontSize="16" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <ToggleButton x:Name="toggleUseToken" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          Checked="ToggleUseToken_Changed"
                                          Unchecked="ToggleUseToken_Changed"/>
                        </StackPanel>

                        <StackPanel x:Name="tokenPanel" Visibility="Collapsed">
                            <TextBlock Text="Format du token (données à chiffrer)" Foreground="#CCC" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtTokenFormat" Style="{StaticResource AdminTextBoxStyle}" 
                                     Text="{}{FULLNAME},{AGE},{PC}"/>
                            <TextBlock Text="Utilisez les placeholders : {}{FULLNAME}, {}{AGE}, {}{PC}, {}{TIMESTAMP}" 
                                       Foreground="#666" FontSize="11" Margin="0,5,0,0"/>
                            <TextBlock Text="Le token chiffré (AES-128 UTF8) remplacera {}{TOKEN} dans l'URL ou les arguments." 
                                       Foreground="#888" FontSize="12" Margin="0,10,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnReset" Content="Réinitialiser" 
                    Style="{StaticResource LaunchButtonStyle}"
                    Background="#8B0000" Width="120" Height="40" Margin="0,0,15,0"
                    Click="BtnReset_Click"/>
            <Button x:Name="btnSave" Content="Enregistrer" 
                    Style="{StaticResource LaunchButtonStyle}"
                    Width="120" Height="40"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
