                              Checked="TimeSlot_Changed" Unchecked="TimeSlot_Changed" Margin="18,0,0,0" />
                    <TextBox Grid.Column="2" x:Name="txtMondayMorningStart" Text="08:00" Style="{StaticResource AdminTextBoxStyle}" 
                             Height="25" TextAlignment="Center" TextChanged="TimeChanged" Tag="MondayMorning|Start"/>
                    <TextBlock Grid.Column="3" Text="à" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox Grid.Column="4" x:Name="txtMondayMorningEnd" Text="13:00" Style="{StaticResource AdminTextBoxStyle}" 
                             Height="25" TextAlignment="Center" TextChanged="TimeChanged" Tag="MondayMorning|End"/>

                    <!-- Après-midi -->
                    <CheckBox Grid.Column="5" x:Name="chkMondayAfternoon" Content="après-midi" Foreground="White" VerticalAlignment="Center" Margin="30,0,88,0"
                              Checked="TimeSlot_Changed" Unchecked="TimeSlot_Changed" Grid.ColumnSpan="2"/>
                    <TextBox Grid.Column="6" x:Name="txtMondayAfternoonStart" Text="13:00" Style="{StaticResource AdminTextBoxStyle}" 
                             Height="25" TextAlignment="Center" TextChanged="TimeChanged" Tag="MondayAfternoon|Start" Margin="37,0,0,0"/>
                    <TextBlock Grid.Column="7" Text="à" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox Grid.Column="8" x:Name="txtMondayAfternoonEnd" Text="00:00" Style="{StaticResource AdminTextBoxStyle}" 
